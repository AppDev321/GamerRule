<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="h1">
        <item name="android:textSize">@dimen/h1_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/sheylia</item>
    </style>
    <style name="h2">
        <item name="android:textSize">@dimen/h2_size</item>
        <item name="android:fontFamily">@font/nunito_sans_semibold</item>
    </style>
    <style name="h3">
        <item name="android:textSize">@dimen/h3_size</item>
        <item name="android:fontFamily">@font/nunito_sans_semibold</item>
    </style>
    <style name="small_text">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:fontFamily">@font/nunito_sans_semibold</item>
    </style>
    <style name="label_text">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:fontFamily">@font/nunito_sans_semibold</item>
    </style>
    <style name="data_match_text">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/nunito_sans_semibold</item>
    </style>
    <style name="editBox">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/outer_padding</item>
        <item name="android:fontFamily">@font/nunito_sans_semibold</item>
    </style>
    <style name="primaryButton">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:background">@drawable/round_button_primary</item>
        <item name="android:fontFamily">@font/nunito_sans_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/outer_padding</item>
    </style>
</resources>