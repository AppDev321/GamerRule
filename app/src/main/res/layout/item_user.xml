<?xml version="1.0" encoding="utf-8"?>
<!-- item_user.xml -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_margin="8dp"
    android:background="@drawable/background_square_disabled"
    android:elevation="1dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewName_user_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/h1"
        android:text="John Doe"
        android:textColor="@color/primary_red"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/textViewEmail_user_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/h2"
        android:textColor="@color/purple"
        android:text="john.doe@example.com"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/textViewPhone_user_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/h2"
        android:textColor="@color/purple"
        android:text="123-456-7890"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/textViewWalletBalance_user_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/h2"
        android:textColor="@color/black"
        android:text="Wallet Balance: $100"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/textViewMatchesPlayed_user_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/h2"
        android:textColor="@color/black"
        android:text="Matches Played: 10"
        android:layout_marginBottom="4dp"/>

    <Button
        android:id="@+id/buttonViewTransactions_user_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/small_text"
        android:backgroundTint="@color/primary_red"
        android:textColor="@color/white"
        android:text="View Transactions"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"/>

    <!-- Add any other user details you want to display -->

</LinearLayout>
