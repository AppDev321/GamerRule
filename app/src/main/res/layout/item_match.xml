<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/edit_text_background"
    android:padding="@dimen/inner_padding"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_title_match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#Match 1 | TDM  | Solo"
            style="@style/h3"
            android:textColor="@color/primary_red" />

        <ImageButton
            android:id="@+id/ibEditMatchButton"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_edit_24" />
    </LinearLayout>

    <!-- Row 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/inner_padding"
        android:gravity="center_vertical">

        <!-- Match Date -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Date Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Match Date"
                style="@style/label_text" />

            <!-- Date Value -->
            <TextView
                android:id="@+id/tvDateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Value"
                style="@style/data_match_text" />

        </LinearLayout>

        <!-- Vertical Line -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <!-- Match Time -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Time Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Match Time"
                style="@style/label_text" />

            <!-- Time Value -->
            <TextView
                android:id="@+id/tvTimeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Value"
                style="@style/data_match_text" />

        </LinearLayout>

        <!-- Vertical Line -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <!-- Map -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Map Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Map"
                style="@style/label_text" />

            <!-- Map Value -->
            <TextView
                android:id="@+id/tvMapValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Map Value"
                style="@style/data_match_text" />

        </LinearLayout>

        <!-- Vertical Line -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <!-- Match Type -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Match Type Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Match Type"
                style="@style/label_text" />

            <!-- Match Type Value -->
            <TextView
                android:id="@+id/tvMatchTypeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Match Type Value"
                style="@style/data_match_text" />

        </LinearLayout>

    </LinearLayout>

    <!-- Row 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/inner_padding"
        android:gravity="center_vertical">

        <!-- Prize Pool -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Prize Pool Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prize Pool"
                style="@style/label_text" />

            <!-- Prize Pool Value -->
            <TextView
                android:id="@+id/tvPrizePoolValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prize Pool Value"
                style="@style/data_match_text" />

        </LinearLayout>

        <!-- Vertical Line -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <!-- Per Kill -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Per Kill Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Per Kill"
                style="@style/label_text" />

            <!-- Per Kill Value -->
            <TextView
                android:id="@+id/tvPerKillValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Per Kill Value"
                style="@style/data_match_text" />

        </LinearLayout>

        <!-- Vertical Line -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <!-- Entry Fees -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Entry Fees Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entry Fees"
                style="@style/label_text" />

            <!-- Entry Fees Value -->
            <TextView
                android:id="@+id/tvEntryFeesValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entry Fees Value"
                style="@style/data_match_text" />

        </LinearLayout>

    </LinearLayout>

    <!-- Additional Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/outer_padding"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="@dimen/inner_padding"
            android:layout_weight="0.3">
            <!-- Progress Bar -->
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:trackColor="@color/white"
                app:trackThickness="8dp"
                app:trackCornerRadius="@dimen/circle_radius"
                app:indicatorColor="@color/primary_red"
                android:progress="30"
                 />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- Participated Text View -->
                <TextView
                    android:id="@+id/tvParticipated"
                    style="@style/data_match_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Participated: " />

                <!-- Remaining Text View -->
                <TextView
                    android:id="@+id/tvRemaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remaining: "
                    style="@style/data_match_text"
                    />
            </LinearLayout>

        </LinearLayout>



        <!-- Join Button -->
        <Button
            android:id="@+id/btnJoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            style="@style/primaryButton"
            android:text="Join" />


    </LinearLayout>

</LinearLayout>